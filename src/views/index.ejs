<!DOCTYPE html>
<html>
<head>
<title>Services CRUD</title>
<style>
body{font-family:Arial;padding:40px;background:#f4f4f4}
table{background:white;border-collapse:collapse;width:100%}
th,td{border:1px solid #ddd;padding:8px}
form.inline{display:inline}
</style>
</head>
<body>
<h2>Add Service</h2>
<form method="POST" action="/services">
<input name="service_name" required>
<input name="url" size="50" required>
<button>Add</button>
</form>

<h2>Services</h2>
<table>
<tr><th>ID</th><th>Name</th><th>URL</th><th>Actions</th></tr>
<% services.forEach(s=>{ %>
<tr>
<form method="POST" action="/services/<%= s.id %>/update">
<td><%= s.id %></td>
<td><input name="service_name" value="<%= s.service_name %>"></td>
<td><input name="url" size="50" value="<%= s.url %>"></td>
<td>
<button>Save</button>
</form>
<form method="POST" action="/services/<%= s.id %>/delete" class="inline">
<button>Delete</button>
</form>
<a href="<%= s.url %>" target="_blank">Check</a>
</td>
</tr>
<% }) %>
</table>
</body>
</html>
